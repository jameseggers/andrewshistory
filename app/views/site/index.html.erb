<!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">St. Andrews Records</h1>
                        <p class="intro-text"> a Web-based Public History project</p>
                        <a href="#search" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>


    <!-- Search Section -->
    <section id="search" class="content-section text-center">
        <div class="row">

                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Search</h2>
                    <p>Search through the extensive database of school records for educational and research purposes.</p>
                    <form method="get" id="pupilSearch">
                      <input type='text' name="pupilForname" placeholder="First Name"/>
                      <input type="text" name="pupilSurname" placeholder="Second Name"/>
                      <input type="text" name="address" placeholder="Address"/>
                      <input type="number" name="age" placeholder="Age"/>
                      <input type="number" name="registerNumber" placeholder="Register Number"/>
                    </form>
                    <br>
                    <table id="dataTable"> </table>
                </div>

        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>About <a href="http://www.standrews.ie/st-andrews--1916/">The Project</a></h2>
                <p>This site provides an interactive way for users to search history of past students prior to 1916. </p>
                <p>This is a collaborative project between PHCH students and
undergraduate Computer Science students aiming to create a webbased
Public History project in collaboration with St Andrews
Resource Centre on Pearse St, Dublin 2.</p>

            </div>
        </div>
    </section>

