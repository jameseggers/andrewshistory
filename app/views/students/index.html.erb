<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Registernumber</th>
      <th>Pupilforname</th>
      <th>Pupilsurname</th>
      <th>Pupiladdress</th>
      <th>Parentsurname</th>
      <th>Parentsoccupation</th>
      <th>Pupilreligion</th>
      <th>Monthlyattendancetotal</th>
      <th>Yearlyattendancetotal</th>
      <th>Additionalnotes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.age %></td>
        <td><%= student.registerNumber %></td>
        <td><%= student.pupilForname %></td>
        <td><%= student.pupilSurname %></td>
        <td><%= student.pupilAddress %></td>
        <td><%= student.parentSurname %></td>
        <td><%= student.parentsOccupation %></td>
        <td><%= student.pupilReligion %></td>
        <td><%= student.monthlyAttendanceTotal %></td>
        <td><%= student.yearlyAttendanceTotal %></td>
        <td><%= student.additionalNotes %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

